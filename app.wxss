/* popup */

.popup__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0, 0, 0, 0.7);
    display: none;
}

.popup__container {
    position: fixed;
    left: 50%;
    top: 50%;
    background: #fff;
    transform: translate3d(-50%, -50%, 0);
    transform-origin: center;
    transition: all 0.4s ease;
    z-index: 11;
    opacity: 0;
}

.popup--show .popup__container {
    opacity: 1;
}

.popup--show .popup__mask {
    display: block;
}

.popup--left .popup__container {
    left: 0;
    top: auto;
    transform: translate3d(-100%, 0, 0);
}

.popup--show.popup--left .popup__container {
    transform: translate3d(0, 0, 0);
}

.popup--right .popup__container {
    right: 0;
    top: auto;
    left: auto;
    transform: translate3d(100%, 0, 0);
}

.popup--show.popup--right .popup__container {
    transform: translate3d(0, 0, 0);
}

.popup--bottom .popup__container {
    top: auto;
    left: auto;
    bottom: 0;
    transform: translate3d(0, 100%, 0);
}

.popup--show.popup--bottom .popup__container {
    transform: translate3d(0, 0, 0);
}

.popup--top .popup__container {
    top: 0;
    left: auto;
    transform: translate3d(0, -100%, 0);
}

.popup--show.popup--top .popup__container {
    transform: translate3d(0, 0, 0);
}


/*tabbar  */
.tabbar {
    height: 90rpx;
    background: #ffffff;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 999;
    box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
    display: flex;
}
.tabbar__item {
    flex: 1;
    display: flex;
    justify-content: center;
}
.tabbar__item_view {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.tabbar__item__icon {
    width: 46rpx;
    height: 46rpx;
    display: block;
    margin-top: 6rpx;
}
.tabbar__item__text {
    font-size: 20rpx;
    color: #666666;
}
.tabbar__item__active .tabbar__item__text{
    color: #18a234;
}