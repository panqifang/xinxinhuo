
.container {
    background: #ffffff;
    height:100%;
    display:flex;
    flex-direction:column;
    box-sizing:border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select:none;
    font-size:35rpx;
    color:#333;
    font-family:Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width:100%;
    height:200px;
}


.pagetop {
    display: flex;
    padding-left: 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1px solid rgba(203, 203, 203, 0.2);
}
.pagetop .zan-btn {
    margin-right: 20rpx;
}
.money {
    padding: 10rpx 20rpx;
    padding-left: 0;
    font-size: 30rpx;
    color: #333333;
    flex: 1;
}
.money text {
    font-size: 50rpx;
    color: darkred;
}
.panel {
    background: #ffffff;
}
.panel-top {
    padding: 10rpx 20rpx;
    display: flex;
}
.panel-top text {
    font-size: 30rpx;
    color: #666666;
    padding-left: 20rpx;
}

.tip {
    padding: 20rpx 40rpx;
}
.tip {
    font-size: 24rpx;
    color: #999999;
}
.myorder {
    padding: 16rpx 20rpx;
}
.myorder text {
    font-size: 32rpx;
    color: #333333;
}