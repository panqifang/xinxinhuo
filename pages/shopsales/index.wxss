
.page {
    position: relative;
}
.page__hd {
    background: #ffffff;
    position: fixed;
    width: 100%;
    height: 200rpx;
    left: 0;
    top: 0;
    box-shadow: 0 0 6rpx rgba(0, 0, 0, 0.1);
}
.page__bd {
    padding-top: 200rpx;
}
.order_list_top_right {
    color: #666666;
}
.order_list_top_right  text {
    color: red;
} 
.sale-hd {
    border-bottom: 1px dashed #cccccc;
    display: flex;
    align-items: center;
}
.sale__num {
    flex: 1;
    padding: 20rpx 0 20rpx 20rpx;
    font-size: 30rpx;
}
.sale__num text {
    color: red;
    font-size: 30rpx;
}
.export__btn {
    margin-right: 20rpx;
}
.date_select {
    display: flex;
    align-items: center;
    margin-top: 6rpx;
}
.time_select {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.date-section {
    display: flex;
    padding-left: 20rpx;
}
.section__title {
    font-size: 28rpx;
}
.sec-date {
    flex: 1;
    padding-left: 20rpx;
}

.tips {
    font-size: 24rpx;
    color: red;
}