.container {
    padding-top: 0;
}
.userinfo-row {
    position: static;
}
.con-body {
}
.cash-title {
    padding: 20rpx 40rpx;
    font-size: 14px;
    color: #666666;
}
.cash-tip {
    font-size: 12px;
    color: #CF5C4E;
    padding: 20rpx;
}
.tip {
    font-size: 14px;
    color: #999999;
    padding: 0 20rpx;
}
.can-cash {
    padding: 20rpx 20rpx 0;
    font-size: 14px;
    color: #666666;
}
.can-cash text {
    color: #CF5C4E;
    margin: 0 10rpx;
}
.err input {
    color: red;
}
.err::after {
    border-top-color: red;
}

.popup-bottom .zan-popup__container {
    left: 0;
    right: 0;
}

/*  */
.input {
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #f4f4f4;
}
.seach {
    border: 1px solid #f1f1f1;
    font-size: 30rpx;
    padding: 10rpx;
    padding-left: 30rpx;
    border-radius: 6rpx;
}
.scorll-view {
    width: 100%;
    height: 500rpx;
}
.bank-item {
    padding: 20rpx;
    border-bottom: 1px solid #f4f4f4;
    font-size: 30rpx;
    color: #666666;
    display: flex;
    justify-content: space-between;
}
.no-found {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 40rpx;
}
.no-found  text {
    font-size: 30rpx;
    color: #666666;
}
.zan-icon-passed {
    color: #18a234;
}